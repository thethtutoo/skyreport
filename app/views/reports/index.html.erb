<p id="notice">
  <%= flash[:notice] %>
</p>

<h1>Listing Reports</h1>
<%= form_tag(search_reports_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search by Error Name" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Category</th>
      <th>Description</th>
      <th>Reporter</th>
      <th>Created_at</th>
    </tr>
  </thead>
  <% x = 0 %>
  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= x += 1 %></td>
        <td><%= report.name %></td>
        <td><%= report.category %></td>
        <td><%= truncate(report.description, length: 20) %></td>
        <td><%= report.reporter_name %></td>
        <td><%= report.created_at.strftime("%F") %></td>
        <td><%= link_to 'Show', report_path(report.id)%></td>
        <td><%= link_to 'Edit', edit_report_path(report.id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Report', new_report_path%>
