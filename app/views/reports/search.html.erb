<p id="notice">
  <%= flash[:notice] %>
</p>
<% if @reports.blank? %>
  <h4>There are no reports containing  <%= params[:search] %>.</h4>
<% else %>


<h3>Displaying reports containing  <%= params[:search] %>.</h3>
<table class="table table-inverse">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Description</th>
      <th>Reporter</th>
      <th>Created_at</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.name %></td>
        <td><%= report.category %></td>
        <td><%= truncate(report.description, length: 20) %></td>
        <td><%= report.reporter_name %></td>
        <td><%= report.created_at.strftime("%F") %></td>
        <td><%= link_to 'Show', report_path(report.id), :class=>"btn btn-success"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<%= link_to "Back", reports_path, :class => "btn btn-secondary"%>
