<h1>Create A Report</h1>

<%= form_for @report do |f| %>
  <% if @report.errors.any? %>
    <div id="error_explaination">
      <h2>
        <%= pluralize(@report.errors.count, "problems")%>
        prohibited this report from being saved:
      </h2>
      <ul>
        <% @report.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
	<div class="field">
		<%= f.label :Error_Title %><br>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :Error_category %><br>
    <%= f.select :category, ['Web UI', 'Web Function','Android App','Seller','Logistics','Other Issues']%>

	</div>
	<div class="field">
		<%= f.label :description %><br>
		<%= f.text_area :description %>
	</div>

  <div class="field">
		<%= f.label :Reported_by %><br>
    <%= f.select :reporter_name, ['May Thu Khine', 'Win Win Htun', 'Zaw Lin Htet',
      'Ye Htut Aung','Thandar Phoo Ngone','Thandar Oo','Aung Myint Zaw','Aye Win','Zay Yar Lin Htet']%>
	</div>


  <br>
	<div class="actions">
		<%= f.submit 'Create'%>
	</div>
<% end %>

<%= link_to 'Back', reports_path%>
